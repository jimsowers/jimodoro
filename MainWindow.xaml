<Window x:Class="ThniksTimer.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
Icon="Assets/icons/best_tomato_icon.ico"
        Height="400" 
        Width="600"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI">
    
    <!-- Use native window chrome so we can enable immersive dark title bar -->
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" 
              Background="Transparent" 
              MouseDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top">
                
                <!-- Minimize Button -->
                <Button x:Name="MinimizeButton" 
                       Width="46" 
                       Height="32"
                       Click="Minimize_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 H10" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Maximize/Restore Button -->
                <Button x:Name="MaximizeButton" 
                       Width="46" 
                       Height="32"
                       Click="MaxRestore_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 H10 V10 H0 Z" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Close Button -->
                <Button x:Name="CloseButton" 
                       Width="46" 
                       Height="32"
                       Click="Close_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 L10,10 M10,0 L0,10" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Timer Display - Much Larger -->
        <Viewbox Grid.Column="0" Grid.Row="0" 
                 Stretch="Uniform"
                 Margin="0,0,5,0">
            <Border x:Name="TimerBorder"
                    Width="400" 
                    Height="340"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="20"
                    Padding="10"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="TimerScaleTransform" ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect x:Name="TimerShadow"
                                    Color="#E2E8F0" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    BlurRadius="10" 
                                    Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel VerticalAlignment="Center">
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusText" 
                              Text="{Binding StateDisplayText, Mode=OneWay}"
                              Style="{StaticResource StatusTextStyle}"
                              Margin="0,0,0,5"
                              Foreground="{StaticResource AccentBrush}"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Timer -->
                    <TextBlock x:Name="TimerDisplay" 
                              Text="{Binding DisplayTime, Mode=OneWay}"
                              Style="{StaticResource TimerTextStyle}"
                              Margin="0,0,0,5"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Progress Bar -->
                    <ProgressBar x:Name="ProgressBar"
                               Value="{Binding ProgressPercentage, Mode=OneWay}"
                               Height="8"
                               Width="350"
                               Background="#E5E7EB"
                               Foreground="{StaticResource AccentBrush}"
                               BorderThickness="0"
                               Margin="0,0,0,10">
                        <ProgressBar.Template>
                            <ControlTemplate TargetType="ProgressBar">
                                <Border Background="{TemplateBinding Background}" 
                                      CornerRadius="4">
                                    <Grid>
                                        <Rectangle x:Name="PART_Track" 
                                                 Fill="{TemplateBinding Background}"
                                                 RadiusX="4" 
                                                 RadiusY="4"/>
                                        <Rectangle x:Name="PART_Indicator" 
                                                 Fill="{TemplateBinding Foreground}"
                                                 RadiusX="4" 
                                                 RadiusY="4"
                                                 HorizontalAlignment="Left"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </ProgressBar.Template>
                    </ProgressBar>
                    
                    <!-- Completed Pomodoros -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Completed Work Sessions:" 
                                  FontSize="16" 
                                  Foreground="{StaticResource MutedTextBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="CompletedCountText" 
                                  Text="{Binding CompletedPomodoros, Mode=OneWay}"
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource AccentBrush}"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                       
                    </StackPanel>
                </StackPanel>
            </Border>
        </Viewbox>
        
        <!-- Celebration Overlay -->
        <Grid x:Name="CelebrationOverlay" 
              Grid.Column="0" Grid.Row="0"
              Visibility="Collapsed"
              Background="#CC000000"
              Opacity="0"
              MouseDown="CelebrationOverlay_MouseDown">
            
            <!-- Confetti Canvas -->
            <Canvas x:Name="ConfettiCanvas" 
                    ClipToBounds="True"
                    IsHitTestVisible="False"/>
            
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="20"
                    Padding="40"
                    MaxWidth="450"
                    MaxHeight="300"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="CelebrationScaleTransform" ScaleX="0.8" ScaleY="0.8"/>
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    Direction="270" 
                                    ShadowDepth="4" 
                                    BlurRadius="20" 
                                    Opacity="0.5"/>
                </Border.Effect>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Celebration Icon (using Path instead of emoji) -->
                    <!--<Viewbox Width="80" Height="80" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20">
                        <Canvas Width="100" Height="100"
                                RenderTransformOrigin="0.5,0.5">
                            <Canvas.RenderTransform>
                                <RotateTransform x:Name="EmojiRotateTransform" Angle="0"/>
                            </Canvas.RenderTransform>
                            --><!-- Celebration Star Burst --><!--
                            <Path Data="M50,10 L55,40 L85,45 L60,60 L70,90 L50,75 L30,90 L40,60 L15,45 L45,40 Z" 
                                  Fill="{StaticResource AccentBrush}"
                                  Stroke="{StaticResource AccentBrush}"
                                  StrokeThickness="2"/>
                            --><!-- Center Circle --><!--
                            <Ellipse Width="30" Height="30" 
                                     Canvas.Left="35" Canvas.Top="35"
                                     Fill="#FFD700"
                                     Stroke="#FFA500"
                                     StrokeThickness="2"/>
                            --><!-- Sparkles --><!--
                            <Path Data="M20,20 L22,25 L17,25 Z M80,25 L82,30 L77,30 Z M75,75 L77,80 L72,80 Z M25,80 L27,85 L22,85 Z" 
                                  Fill="#FFD700"/>
                        </Canvas>
                    </Viewbox>-->
                    
                    <!-- Celebration Message -->
                    <TextBlock x:Name="CelebrationMessage"
                              Text="Work Session Complete!"
                              FontSize="28"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource AccentBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    
                    <!-- Celebration Sub-message -->
                    <TextBlock x:Name="CelebrationSubMessage"
                              Text="Great job! Time for a break."
                              FontSize="16"
                              Foreground="{StaticResource MutedTextBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    
                    <!-- Auto-start countdown -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Starting next phase in "
                                  FontSize="14"
                                  Foreground="{StaticResource MutedTextBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="CountdownText"
                                  Text="15"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource AccentBrush}"
                                  Margin="5,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="seconds..."
                                  FontSize="14"
                                  Foreground="{StaticResource MutedTextBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Dismiss hint -->
                    <TextBlock Text="(Click anywhere to dismiss)"
                              FontSize="12"
                              Foreground="{StaticResource MutedTextBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,15,0,0"
                              Opacity="0.6"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Control Buttons and Settings - Right Side -->
        <StackPanel Grid.Column="1" Grid.Row="0"
                   Orientation="Vertical" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="5,10,5,0"
                   Width="150">
            
            <!-- Control Buttons -->
            <Button x:Name="StartPauseButton" 
                   Content="{Binding PlayPauseText, Mode=OneWay}"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="StartPauseButton_Click"
                   Height="45"
                   Margin="0,0,0,15"/>
            
            <Button x:Name="StopButton" 
                   Content="Stop"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="StopButton_Click"
                   Height="45"
                   Margin="0,0,0,15">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource SecondaryColor}"/>
                </Button.Background>
            </Button>
            
            <Button x:Name="SkipButton" 
                   Content="Skip"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="SkipButton_Click"
                   Height="45"
                   Margin="0,0,0,30">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource MutedTextColor}"/>
                </Button.Background>
            </Button>
            
            <!-- Settings -->
            <Expander Header="Settings" 
                     FontWeight="SemiBold"
                     Foreground="{StaticResource TextBrush}"
                     HorizontalAlignment="Stretch">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Work Duration -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                              Text="Work:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                            x:Name="WorkDurationTextBox"
                            Text="25"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="WorkDurationTextBox_TextChanged"
                            LostFocus="WorkDurationTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Foreground="{StaticResource MutedTextBrush}"/>
                    
                    <!-- Short Break Duration -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                              Text="Break:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                            x:Name="ShortBreakTextBox"
                            Text="5"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,8,5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="ShortBreakTextBox_TextChanged"
                            LostFocus="ShortBreakTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource MutedTextBrush}"/>
                    
                    <!-- Long Break Duration -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                              Text="Long:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                            x:Name="LongBreakTextBox"
                            Text="15"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,8,5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="LongBreakTextBox_TextChanged"
                            LostFocus="LongBreakTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource MutedTextBrush}"/>
                </Grid>
            </Expander>
        </StackPanel>


    </Grid>
    </Grid>
</Window>
