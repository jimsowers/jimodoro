<Window x:Class="ThniksTimer.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
Icon="Assets/icons/best_tomato_icon.ico"
        Height="400" 
        Width="600"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI">
    
    <!-- Use native window chrome so we can enable immersive dark title bar -->
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" 
              Background="Transparent" 
              MouseDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top">
                
                <!-- Minimize Button -->
                <Button x:Name="MinimizeButton" 
                       Width="46" 
                       Height="32"
                       Click="Minimize_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 H10" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Maximize/Restore Button -->
                <Button x:Name="MaximizeButton" 
                       Width="46" 
                       Height="32"
                       Click="MaxRestore_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 H10 V10 H0 Z" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
                
                <!-- Close Button -->
                <Button x:Name="CloseButton" 
                       Width="46" 
                       Height="32"
                       Click="Close_Click"
                       Style="{StaticResource WindowControlButtonStyle}">
                    <Path Data="M0,0 L10,10 M10,0 L0,10" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Timer Display - Much Larger -->
        <Border Grid.Column="0" Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="20"
                Padding="10"
                Margin="0,0,5,0">
            <Border.Effect>
                <DropShadowEffect Color="#E2E8F0" 
                                Direction="270" 
                                ShadowDepth="2" 
                                BlurRadius="10" 
                                Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center">
                <!-- Status Text -->
                <TextBlock x:Name="StatusText" 
                          Text="{Binding StateDisplayText, Mode=OneWay}"
                          Style="{StaticResource StatusTextStyle}"
                          Margin="0,0,0,5"
                          Foreground="{StaticResource AccentBrush}"
                          HorizontalAlignment="Center"/>
                
                <!-- Timer -->
                <TextBlock x:Name="TimerDisplay" 
                          Text="{Binding DisplayTime, Mode=OneWay}"
                          Style="{StaticResource TimerTextStyle}"
                          Margin="0,0,0,5"
                          HorizontalAlignment="Center"/>
                
                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar"
                           Value="{Binding ProgressPercentage, Mode=OneWay}"
                           Height="8"
                           Background="#E5E7EB"
                           Foreground="{StaticResource AccentBrush}"
                           BorderThickness="0"
                           Margin="0,0,0,10">
                    <ProgressBar.Template>
                        <ControlTemplate TargetType="ProgressBar">
                            <Border Background="{TemplateBinding Background}" 
                                  CornerRadius="4">
                                <Grid>
                                    <Rectangle x:Name="PART_Track" 
                                             Fill="{TemplateBinding Background}"
                                             RadiusX="4" 
                                             RadiusY="4"/>
                                    <Rectangle x:Name="PART_Indicator" 
                                             Fill="{TemplateBinding Foreground}"
                                             RadiusX="4" 
                                             RadiusY="4"
                                             HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ProgressBar.Template>
                </ProgressBar>
                
                <!-- Completed Pomodoros -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Completed Work Sessions:" 
                              FontSize="16" 
                              Foreground="{StaticResource MutedTextBrush}"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="CompletedCountText" 
                              Text="{Binding CompletedPomodoros, Mode=OneWay}"
                              FontSize="20" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource AccentBrush}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                   
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Control Buttons and Settings - Right Side -->
        <StackPanel Grid.Column="1" Grid.Row="0"
                   Orientation="Vertical" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="5,10,5,0"
                   Width="150">
            
            <!-- Control Buttons -->
            <Button x:Name="StartPauseButton" 
                   Content="{Binding PlayPauseText, Mode=OneWay}"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="StartPauseButton_Click"
                   Height="45"
                   Margin="0,0,0,15"/>
            
            <Button x:Name="StopButton" 
                   Content="Stop"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="StopButton_Click"
                   Height="45"
                   Margin="0,0,0,15">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource SecondaryColor}"/>
                </Button.Background>
            </Button>
            
            <Button x:Name="SkipButton" 
                   Content="Skip"
                   Style="{StaticResource CompactButtonStyle}"
                   Click="SkipButton_Click"
                   Height="45"
                   Margin="0,0,0,30">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource MutedTextColor}"/>
                </Button.Background>
            </Button>
            
            <!-- Settings -->
            <Expander Header="Settings" 
                     FontWeight="SemiBold"
                     Foreground="{StaticResource TextBrush}"
                     HorizontalAlignment="Stretch">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Work Duration -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                              Text="Work:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                            x:Name="WorkDurationTextBox"
                            Text="25"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="WorkDurationTextBox_TextChanged"
                            LostFocus="WorkDurationTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Foreground="{StaticResource MutedTextBrush}"/>
                    
                    <!-- Short Break Duration -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                              Text="Break:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                            x:Name="ShortBreakTextBox"
                            Text="5"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,8,5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="ShortBreakTextBox_TextChanged"
                            LostFocus="ShortBreakTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource MutedTextBrush}"/>
                    
                    <!-- Long Break Duration -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                              Text="Long:" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                            x:Name="LongBreakTextBox"
                            Text="15"
                            Width="50"
                            Height="30"
                            Padding="5,6"
                            Margin="5,8,5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource ModernTextBoxStyle}"
                            TextChanged="LongBreakTextBox_TextChanged"
                            LostFocus="LongBreakTextBox_LostFocus"
                            PreviewTextInput="NumericTextBox_PreviewTextInput"
                            MaxLength="3"
                            DataObject.Pasting="NumericTextBox_Pasting"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" 
                              Text="min"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Margin="0,8,0,0"
                              Foreground="{StaticResource MutedTextBrush}"/>
                </Grid>
            </Expander>
        </StackPanel>


    </Grid>
    </Grid>
</Window>
